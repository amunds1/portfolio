---
export interface Props {
  title: string;
  body: string;
  href: string;
  showcaseImage: string;
  createdWith: string[];
  showGitHubButton?: boolean;
}

const { href, title, body, showcaseImage, createdWith, showGitHubButton } =
  Astro.props;
---

<article
  class="transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-[102%] duration-300"
>
  <div class="flex rounded-lg drop-shadow-sm border p-6 items-start gap-2">
    <div class="flex flex-col gap-3">
      <h2 class="text-3xl">{title}</h2>

      <p>{body}</p>

      <div class="mt-4 flex gap-5">
        {
          createdWith.map((item) => (
            <img class="object-contain h-9 w-9" src={item} alt={item} />
          ))
        }
      </div>

      <img height="auto" width="80%" src={showcaseImage} />
    </div>
    {showGitHubButton && <img class="w-[2rem]" src="external-link-icon.svg" />}
  </div>
</article>
