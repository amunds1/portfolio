---
import Layout from "../layouts/Layout.astro";
import ProjectShowcase, {
  type Props,
} from "../components/ProjectShowcase.astro";
import projects from "../../projects.json";
---

<Layout title="Andreas Amundsen Portfolio">
  <main class="flex flex-col gap-8">
    <span role="region" aria-label="About me">
      <div
        class="flex flex-col md:justify-center md:flex-row md:items-center gap-8"
      >
        <img
          class="w-48 h-48 object-cover object-center rounded-full border-4 border-white shadow-lg"
          src="pb.jpg"
          alt="Profile picture"
        />
        <div>
          <p class="text-lg font-medium text-gray-700">
            Software developer @ <a
              href="https://www.bekk.no/"
              target="_blank"
              class="text-blue-600 hover:text-blue-700"
              role="link">Bekk</a
            >
          </p>
          <p class="text-lg text-gray-600">Oslo, Norway</p>

          <div class="contact flex flex-row mt-4" role="list">
            <a href="mailto:andreas@amundsen.dev" class="mr-4" role="listitem">
              <img src="mail.png" class="h-14 w-14" alt="Mail icon" />
            </a>
            <a
              href={"https://github.com/amunds1"}
              target="_blank"
              class="mr-4"
              role="listitem"
            >
              <img src={"github.png"} class="h-14 w-14" alt={"GitHub icon"} />
            </a>
            <a
              href="https://www.linkedin.com/in/andreas-amundsen/"
              target="_blank"
              role="listitem"
            >
              <img src="linkedin.png" class="h-14 w-14" alt="Linkedin icon" />
            </a>
          </div>
        </div>
      </div>
    </span>
    <span role="region" aria-label="My projects">
      <h1
        class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-[#2B2E4A] via-[#E84545] to-[#903749]"
        role="heading"
        aria-level="1"
      >
        My projects
      </h1>
      <ul role="list" class="flex flex-col gap-6 mt-6">
        {
          projects.map((project: Props) =>
            project.href ? (
              <a href={project.href} target="_blank" role="listitem">
                <ProjectShowcase {...project} />
              </a>
            ) : (
              <>
                <div role="listitem">
                  <ProjectShowcase {...project} />
                </div>
              </>
            ),
          )
        }
      </ul>
    </span>
  </main>
</Layout>
